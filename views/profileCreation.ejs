    <div class="container col-md-3">
        <div class="jumbotron">
            <form id="newEstablishmentForm" action="/profileCreation" method="POST">
                <div class="form-group">
                  <label for="establishmentNameInput">Establishment Name: </label>
                  <input type="text" class="form-control" id="establishmentNameInput" name="establishmentName"required>
                </div>
                <div class="form-group">
                  <label for="wheelchairRampSelect">Wheelchair Ramp?</label>
                  <select class="form-control" id="wheelchairRampSelect" name="wheelchair">
                    <option>Yes</option>
                    <option>No</option>
                  </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
